@model IEnumerable<AnatidaeHaxball.Equipa>

@{
    ViewBag.Title = "Equipas";
}

<h2>Equipas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
